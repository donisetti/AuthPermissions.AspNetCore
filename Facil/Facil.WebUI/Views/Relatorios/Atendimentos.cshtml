@model Facil.WebUI.ViewModels.ReportViewModel;

@{
    ViewData["Title"] = "Atendimentos";
}

<div class="reports">

    <div class="row">

        <div class="col-md-6">

            <div class="pull-left">
                <h4>@ViewData["Title"]</h4>
            </div>

        </div>

    </div>


    <form asp-action="Atendimentos">
        <div class="row">
            <span class="col-md-4">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control " asp-items="ViewBag.ClienteId">
                    <option value="">Todos clientes</option>
                </select>
            </span>

        </div>

        <div class="row">
            <span class="col-md-4">
                <div class="form-group">
                    <label asp-for="DataInicio" class="control-label"></label>
                    <input asp-for="DataInicio" class="form-control" />
                </div>
            </span>

            <span class="col-md-4">
                <div class="form-group">
                    <label asp-for="DataFim" class="control-label"></label>
                    <input asp-for="DataFim" class="form-control" />

                </div>
            </span>

            <span class="form-group col-md-2">
                <input type="submit" value="Gerar Relatório" class="btn btn-primary" />
            </span>"
        </div>

    </form>

    <div class="container webreport">
        @await Model.WebReport.Render()
    </div>

</div>




